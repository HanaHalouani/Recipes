@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Recipes.Models.Recipe>?


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                My Recipes
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Recipe" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Post New Recipe
            </a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Recipe
        </th>
        <th>
            Ingredients
        </th>
        <th>
            Description
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ob in Model)
    {
        <tr>
            <td>
                @ob.RecipeName
            </td>
            <td>
                @ob.RecipeIngredients
            </td>
            <td>
                @ob.RecipeDescription
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Recipe" asp-action="Edit" asp-route-id="@ob.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"> Edit</i>
                    </a>
                    <a class="btn btn-danger mx-2" onclick="Delete('/Recipe/Delete/@ob.Id')">
                        <i class="bi bi-pencil-square"> Delete</i>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>

</table>