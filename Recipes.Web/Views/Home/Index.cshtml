@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Recipes.Models.Recipe>?



<div class="row pb-3">
    @foreach (var ob in Model!)
    {<div class="col-lg-3 col-sm-6">
         <div class="row p-2">
             <div class="col-12 p-1">
                 <div class="card border-0 p-3 shadow border-top border-5 rounded">
                     <img src="@ob.ImageUrl" class="card-img-top rounded"/>
                     <div class="card-body pb-0">
                         <div class="pl-1">
                             <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@ob.RecipeName</p>
                         </div>
                     </div>
                     <a asp-action="Details" asp-route-recipeId="@ob.Id" class="btn btn-info bg-gradient border-0 form-control">
                         <i class="bi bi-pen"></i>
                     </a>
                 </div>
             </div>
         </div>
     </div>
    }
</div>